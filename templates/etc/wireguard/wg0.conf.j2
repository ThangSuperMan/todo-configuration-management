# {{ ansible_managed }} - PLEASE DO NOT EDIT THIS FILE MANUALLY

[Interface]
Address = {{ vpn.wireguard_server_ip }}
SaveConfig = false
PostUp = iptables -A FORWARD -i {{ vpn.wireguard_interface }} -j ACCEPT; iptables -t nat -A POSTROUTING -o {{ vpn.destination_network_interface }} -j MASQUERADE
PostDown = iptables -D FORWARD -i {{ vpn.wireguard_interface }} -j ACCEPT; iptables -t nat -D POSTROUTING -o {{ vpn.destination_network_interface }} -j MASQUERADE
ListenPort = {{ vpn.wireguard_port }}
PrivateKey = {{ vpn.server_privkey }}

{% for peer in vpn.wireguard_peers %}
[Peer]
PublicKey = {{ peer.public_key }}
AllowedIPs = {{ peer.allowed_ips }}
{% endfor %}
