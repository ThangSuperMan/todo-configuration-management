# {{ ansible_managed }} - PLEASE DO NOT EDIT THIS FILE MANUALLY

[Interface]
Address = {{ wireguard_server_ip }}
SaveConfig = false
PostUp = iptables -A FORWARD -i {{ wireguard_interface }} -j ACCEPT; iptables -t nat -A POSTROUTING -o {{ destination_network_interface }} -j MASQUERADE
PostDown = iptables -D FORWARD -i {{ wireguard_interface }} -j ACCEPT; iptables -t nat -D POSTROUTING -o {{ destination_network_interface }} -j MASQUERADE
ListenPort = {{ wireguard_port }}
PrivateKey = {{ wireguard_server_privkey }}

{% for peer in wireguard_peers %}
[Peer]
PublicKey = {{ peer.public_key }}
AllowedIPs = {{ peer.allowed_ips }}
{% endfor %}
